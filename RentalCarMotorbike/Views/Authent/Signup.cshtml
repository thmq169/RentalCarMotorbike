@model RentalCarMotorbike.Models.Customer
@{
    Layout = null;
    ViewBag.Title = "Signup";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/material-design-iconic-font.min.css")
    @Styles.Render("~/Content/style.css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="main">
        <div class="signin-image">
            <figure><img src="~/Content/Image/Assets/signup-image.jpg" alt="sing up image"></figure>

        </div>
        @using (Html.BeginForm("Signup", "Authent", FormMethod.Post, new { @class = "form", @id = "signup-form" }))
        {
            <h3 class="heading">Signup</h3>
            @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CustomerID, htmlAttributes: new { @class = "form-label col-md-2" })

            @Html.EditorFor(model => model.CustomerID, new { htmlAttributes = new { @class = "form-control", @rule = "required" } })
            <span class="form-message"></span>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "form-label col-md-2" })

            @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control", @rule = "required" } })
            <span class="form-message"></span>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerEmail, htmlAttributes: new { @class = "form-label col-md-2" })

            @Html.EditorFor(model => model.CustomerEmail, new { htmlAttributes = new { @class = "form-control", @rule = "required" } })
            <span class="form-message"></span>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CustomerPassword, htmlAttributes: new { @class = "form-label col-md-2" })

            @Html.EditorFor(model => model.CustomerPassword, new { htmlAttributes = new { @class = "form-control", @type = "password", @rule = "required" } })
            <span class="form-message"></span>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerAddress, htmlAttributes: new { @class = "form-label col-md-2" })

            @Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "form-control", @rule = "required" } })
            <span class="form-message"></span>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerPhone, htmlAttributes: new { @class = "form-label col-md-2" })

            @Html.EditorFor(model => model.CustomerPhone, new { htmlAttributes = new { @class = "form-control", @rule = "required|phoneLength:10" } })
            <span class="form-message"></span>

        </div>

        <div class="error-wrapper">
            @Html.ValidationSummary()
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="form-submit">Sigup</button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="font-size:16px">
                <p>You've already an account.</p>
                @Html.ActionLink("Login", "Login") Here
            </div>
        </div>
    </div>
        }
    </div>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/validation.js")
    <script type="text/javascript">
        var registerForm = new Validator('#signup-form')
        function preventBack() { window.history.forward() }
        setTimeout(preventBack(), 0);
        window.onunload = function () { null };
    </script>
</body>

</html>


